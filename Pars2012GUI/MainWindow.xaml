<Window x:Class="Pars2012GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pars2012GUI"
        mc:Ignorable="d"
        Title="London 2012 - Férfi kalapácsvetés - selejtező" Height="450" Width="425">
    <Grid>
        <Label Content="Válasszon versenyzőt!" HorizontalAlignment="Left" Margin="50,40,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="versenyzokBox"  HorizontalAlignment="Left" Margin="55,71,0,0" VerticalAlignment="Top" Width="180" SelectionChanged="versenyzokBox_SelectionChanged"/>
        <Label Content="Csoport:" HorizontalAlignment="Left" Margin="55,110,0,0" VerticalAlignment="Top"/>
        <Label x:Name="csoportEl" Content="B" HorizontalAlignment="Left" Margin="105,110,0,0" VerticalAlignment="Top"/>
        <Label Content="Nemzet:" HorizontalAlignment="Left" Margin="55,136,0,0" VerticalAlignment="Top"/>
        <Label x:Name="nemzetEl" Content="Magyarország" HorizontalAlignment="Left" Margin="103,136,0,0" VerticalAlignment="Top"/>
        <Label Content="Nemzet kód:" HorizontalAlignment="Left" Margin="55,162,0,0" VerticalAlignment="Top"/>
        <Label x:Name="nemzetKodEl" Content="HUN" HorizontalAlignment="Left" Margin="127,162,0,0" VerticalAlignment="Top"/>

        <Label Content="Sorozat:" HorizontalAlignment="Left" Margin="55,188,0,0" VerticalAlignment="Top"/>
        <Label x:Name="sorozatEl" Content="77,11;79,37;-" HorizontalAlignment="Left" Margin="101,188,0,0" VerticalAlignment="Top"/>
        <Label Content="Eredmeny:" HorizontalAlignment="Left" Margin="55,214,0,0" VerticalAlignment="Top"/>
        <Label x:Name="eredmenyEl" Content="79,37" HorizontalAlignment="Left" Margin="114,214,0,0" VerticalAlignment="Top"/>
        <Label Content="Zászló:" HorizontalAlignment="Left" Margin="55,240,0,0" VerticalAlignment="Top"/>
        <Image x:Name="zaszloImg" HorizontalAlignment="Left" Height="124" Margin="101,271,0,0" VerticalAlignment="Top" Width="234"/>

    </Grid>
</Window>
